{
  "manifest_version": 3,
  "name": "PartSelect Assistant",
  "version": "1.0",
  "description": "AI-powered appliance repair assistant",
  "permissions": [
    "sidePanel",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://www.partselect.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}